{
  "name": "client",
  "version": "1.0.0",
  "private": true,
  "description": "사내 실시간 채팅 메신저",
  "author": "Huni",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --win nsis",
    "build:portable": "tsc && vite build && electron-builder --win portable",
    "build:linux": "tsc && vite build && electron-builder --linux AppImage",
    "build:all": "tsc && vite build && electron-builder --win nsis --linux AppImage",
    "preview": "vite preview",
    "build:web": "vite build --config vite.config.web.ts"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "socket.io-client": "^4.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0"
  },
  "build": {
    "appId": "com.messenger.simsimi",
    "electronVersion": "33.4.11",
    "productName": "Messenger",
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Messenger",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": null,
      "artifactName": "MessengerSimsimi-Setup-${version}.exe"
    },
    "linux": {
      "target": "AppImage",
      "category": "Network",
      "icon": "build/icon.png"
    },
    "portable": {
      "artifactName": "MessengerSimsimi.exe"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "src/assets/icon.png",
        "to": "icon.png"
      }
    ]
  }
}
