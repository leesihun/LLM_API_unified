{
  "name": "client",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --win portable",
    "build:linux": "tsc && vite build && electron-builder --linux AppImage",
    "build:all": "tsc && vite build && electron-builder --win portable --linux AppImage",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "socket.io-client": "^4.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0"
  },
  "build": {
    "appId": "com.huni.messenger",
    "productName": "Huni Messenger",
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage",
      "category": "Network"
    },
    "portable": {
      "artifactName": "HuniMessenger.exe"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  }
}
